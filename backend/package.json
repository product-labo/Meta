{
  "name": "lisk-paywall-sdk",
  "version": "1.0.0",
  "description": "Production-ready Lisk paywall SDK for Node.js with subscription and one-time payment support",
  "main": "dist/LiskPaywall.cjs",
  "module": "src/LiskPaywall.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/LiskPaywall.js",
      "require": "./dist/LiskPaywall.cjs",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "import": "./src/sdk/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./testing": {
      "import": "./src/sdk/testing/index.js",
      "types": "./dist/testing/index.d.ts"
    }
  },
  "files": [
    "src/sdk/",
    "src/LiskPaywall.js",
    "dist/",
    "schema.sql",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "verify": "tsx scripts/verify-setup.ts",
    "setup-db": "node setup-database.js",
    "setup:local-db": "node setup-local-db.js",
    "setup:metagauge": "node run-metagauge-migration.js",
    "setup:universal-indexer": "node run-universal-indexer-migration.js",
    "test:db": "node test-db-connection.js",
    "test:rpc": "node test-lisk-rpc.js",
    "quick-start": "node quick-start.js",
    "build": "npm run build:cjs && npm run build:types && npm run build:post",
    "build:post": "./scripts/post-build.sh",
    "build:cjs": "babel src/LiskPaywall.js --out-file dist/LiskPaywall.cjs && babel src/sdk --out-dir dist/sdk --out-file-extension .cjs",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepublishOnly": "npm run build && npm test",
    "setup": "./scripts/setup.sh",
    "pre-publish": "./scripts/pre-publish-check.sh",
    "publish-sdk": "./scripts/publish.sh",
    "pack-test": "npm pack && echo 'Created package tarball for testing'"
  },
  "keywords": [
    "lisk",
    "lsk",
    "broadling",
    "paywall",
    "cryptocurrency",
    "payments",
    "blockchain",
    "subscription",
    "nodejs",
    "sdk",
    "api",
    "privacy"
  ],
  "author": {
    "name": "Broadling Paywall Team",
    "email": "elgravicodesh@gmail.com",
    "url": "https://github.com/limitlxx/zcash-paywall-sdk"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/limitlxx/lisk-paywall-sdk"
  },
  "bugs": {
    "url": "https://github.com/limitlxx/lisk-paywall-sdk/issues"
  },
  "homepage": "https://github.com/limitlxx/lisk-paywall-sdk#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@liskhq/lisk-client": "^6.1.0",
    "@liskhq/lisk-cryptography": "^4.1.0",
    "@liskhq/lisk-utils": "^0.3.0",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.3",
    "ethers": "^6.13.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11",
    "pg-hstore": "^2.3.4",
    "starknet": "^8.9.2",
    "validator": "^13.15.23",
    "ws": "^8.18.3"
  },
  "optionalDependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "eslint": "^8.56.0",
    "fast-check": "^4.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/src/sdk/**/*.test.js",
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/sdk/**/*.js",
      "!src/sdk/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18"
          },
          "modules": "cjs"
        }
      ]
    ]
  }
}
