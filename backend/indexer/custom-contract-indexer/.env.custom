# Custom Contract Indexer Environment Variables

# Database Configuration (using existing zcash_indexer database)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=admin
DB_NAME=broadlypaywall

# Database Connection Pool
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000
DB_RETRY_ATTEMPTS=5
DB_SSL_ENABLED=false

# Primary RPC Endpoints
ETHEREUM_RPC=https://ethereum-rpc.publicnode.com
POLYGON_RPC=https://polygon-bor-rpc.publicnode.com
BSC_RPC=https://bsc-rpc.publicnode.com
BASE_RPC=https://base-rpc.publicnode.com

# Lisk RPC Endpoints (Primary)
LISK_MAINNET_RPC=https://rpc.api.lisk.com
LISK_SEPOLIA_RPC=https://rpc.sepolia-api.lisk.com

# Lisk RPC Endpoints (Fallback)
LISK_MAINNET_FALLBACK=https://lisk.drpc.org
LISK_SEPOLIA_FALLBACK=https://lisk-sepolia.drpc.org

